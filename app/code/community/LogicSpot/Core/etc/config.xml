<config>
    <modules>
        <LogicSpot_Core>
            <version>0.1.2</version>
        </LogicSpot_Core>
    </modules>
    <global>
        <helpers>
            <logicspot_core>
                <class>LogicSpot_Core_Helper</class>
            </logicspot_core>
        </helpers>
		<models>
			<logicspot_core>
				<class>LogicSpot_Core_Model</class>
			</logicspot_core>
			<core>
				<rewrite>
					<design_package>LogicSpot_Core_Model_Design_Package</design_package>
				</rewrite>
			</core>
		</models>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <LogicSpot_Core before="Mage_Adminhtml">LogicSpot_Core</LogicSpot_Core>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <extensions>
                    <file>logicspot/core.xml</file>
                </extensions>
            </updates>
        </layout>
    </adminhtml>
</config>
